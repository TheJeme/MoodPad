<Window x:Class="MoodPad.ColorpickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:MoodPad"
        mc:Ignorable="d"        
        ResizeMode="NoResize"
        Title="Colorpicker" 
        Height="420" Width="320">
    <Grid>
        <xctk:ColorCanvas SelectedColor="White" HexadecimalString="#FFFFFF" Background="White" Margin="10,10" x:Name="ColorPickCanvas" HorizontalAlignment="Center" BorderThickness="0" Width="280"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Done" Width="110" Height="30" Margin="20,20" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
